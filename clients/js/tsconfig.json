{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "declaration": true,
    "module": "ESNext",
    "lib": ["ES2017", "DOM"],
    "outDir": "dist/main",
    "sourceMap": true,
    "target": "ES2017",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true
  }
}
